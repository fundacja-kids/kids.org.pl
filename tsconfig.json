{
  "compilerOptions": {
    "rootDir": "src",
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "src",
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
